{
    "compilerOptions": {
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2019",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "tsBuildInfoFile": "typings/tsconfig.tsbuildinfo",
        "noErrorTruncation": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "types": [
            "jest",
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}